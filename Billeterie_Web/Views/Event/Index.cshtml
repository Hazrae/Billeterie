@model Billeterie_Web.ViewModel.Eventby3;

@{
    ViewData["Title"] = "Index";
}

<h1>Event List</h1>

<br />
<br />
<br />

<div class="container">
    @foreach (var item in Model.list)
    {
        <div>
            <div class="row" style="text-align:center;margin-bottom:2px; border:1px solid black"></div>
            <div class="col-md-12" style="font-weight:bold;font-size:22px">@item.EventName</div>
        </div>
        <br />
        <div class="row" style=" margin: 1px;padding: 1px;height: 350px;">
            <div class="col-md-4"> <a href=@Url.Action("Profil","Artist",new {id = item.ArtistID})> <img src=@item.ArtistPhoto></a></div>
            <div class="col-md-6" style="width:150px; text-align:center;">
                <div class="row" style="height:60px;">
                    <div class="col">@item.LocationName</div>
                </div>               
                <div class="row" style="height:120px;">
                    <div class="col">@item.DateEvent.ToString("dd/MM/yyy")</div>
                </div>         
                <div class="row" style="height:60px;">
                    <div class="col"><button class="btn btn-primary">Booking</button></div>
                </div>
            </div>
        </div>

    }



    @{
        if (Model.offset != 0)
        {<span> @Html.ActionLink("Previous", "Index", new { offset = Model.offset - 3 })&nbsp;|&nbsp;</span>}<span> @Html.ActionLink("Next", "Index", new { offset = Model.offset + 3 })</span>
    }
</div>